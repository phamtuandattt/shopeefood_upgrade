<div class="reset-password-container">
    <div class="reset-form-wrapper">
        <!-- Reset Password Header -->
        <div class="reset-header">
            <div class="reset-icon">
                <svg width="48" height="48" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M12 1C8.27 1 5.18 3.38 4.24 6.22L2.34 8.12C1.95 8.51 1.95 9.15 2.34 9.54L4.24 11.44C5.18 14.28 8.27 16.66 12 16.66C16.41 16.66 20 13.07 20 8.66C20 4.25 16.41 0.66 12 0.66V1ZM12 14.66C9.42 14.66 7.29 12.86 6.46 10.44L5.05 9.03L6.46 7.62C7.29 5.2 9.42 3.4 12 3.4C15.31 3.4 18 6.09 18 9.4C18 12.71 15.31 15.4 12 15.4V14.66ZM10.5 7.5C10.5 8.33 11.17 9 12 9S13.5 8.33 13.5 7.5S12.83 6 12 6S10.5 6.67 10.5 7.5ZM12 10C10.34 10 9 11.34 9 13H15C15 11.34 13.66 10 12 10Z" />
                    <path d="M18 16V14C18 13.45 17.55 13 17 13S16 13.45 16 14V16H15C14.45 16 14 16.45 14 17V21C14 21.55 14.45 22 15 22H19C19.55 22 20 21.55 20 21V17C20 16.45 19.55 16 19 16H18ZM17.5 18.5C17.78 18.5 18 18.72 18 19S17.78 19.5 17.5 19.5S17 19.28 17 19S17.22 18.5 17.5 18.5Z" />
                </svg>
            </div>
            <h1 class="reset-title">Reset Your Password</h1>
            <p class="reset-subtitle">Create a new secure password for your account</p>
        </div>

        <!-- Reset Password Form -->
        <form class="reset-form" id="resetPasswordForm" novalidate>
            <!-- New Password Input Group -->
            <div class="input-group-reset-pwd">
                <label for="newPassword" class="input-label">New Password</label>
                <div class="input-wrapper">
                    <div class="input-icon">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                            <path d="M18 8H17V6C17 3.24 14.76 1 12 1S7 3.24 7 6V8H6C4.9 8 4 8.9 4 10V20C4 21.1 4.9 22 6 22H18C19.1 22 20 21.1 20 20V10C20 8.9 19.1 8 18 8ZM12 17C10.9 17 10 16.1 10 15S10.9 13 12 13S14 13.9 14 15S13.1 17 12 17ZM15.1 8H8.9V6C8.9 4.29 10.29 2.9 12 2.9S15.1 4.29 15.1 6V8Z" />
                        </svg>
                    </div>
                    <input type="password" id="newPassword" name="newPassword" class="input-field"
                           placeholder="Enter your new password" autocomplete="new-password" required>
                    <button type="button" class="password-toggle" id="newPasswordToggle">
                        <svg class="eye-open" width="20" height="20" viewBox="0 0 24 24"
                             fill="currentColor">
                            <path d="M12 4.5C7 4.5 2.73 7.61 1 12C2.73 16.39 7 19.5 12 19.5S21.27 16.39 23 12C21.27 7.61 17 4.5 12 4.5ZM12 17C9.24 17 7 14.76 7 12S9.24 7 12 7S17 9.24 17 12S14.76 17 12 17ZM12 9C10.34 9 9 10.34 9 12S10.34 15 12 15S15 13.66 15 12S13.66 9 12 9Z" />
                        </svg>
                        <svg class="eye-closed" width="20" height="20" viewBox="0 0 24 24"
                             fill="currentColor" style="display: none;">
                            <path d="M12 7C9.24 7 7 9.24 7 12C7 12.65 7.13 13.26 7.36 13.82L9.8 11.38C9.93 10.59 10.59 9.93 11.38 9.8L13.82 7.36C13.26 7.13 12.65 7 12 7ZM2 4.27L4.28 6.55L4.73 7C3.08 8.3 1.78 10 1 12C2.73 16.39 7 19.5 12 19.5C13.55 19.5 15.03 19.2 16.38 18.66L16.81 19.09L19.73 22L21 20.73L3.27 3L2 4.27ZM7.53 9.8L9.08 11.35C9.03 11.56 9 11.78 9 12C9 13.66 10.34 15 12 15C12.22 15 12.44 14.97 12.65 14.92L14.2 16.47C13.53 16.8 12.79 17 12 17C9.24 17 7 14.76 7 12C7 11.21 7.2 10.47 7.53 9.8ZM11.84 9.02L14.99 12.17L15.01 12.01C15.01 10.35 13.67 9.01 12.01 9.01L11.84 9.02Z" />
                        </svg>
                    </button>
                    <div class="input-status">
                        <svg class="status-icon success" width="20" height="20" viewBox="0 0 24 24"
                             fill="currentColor">
                            <path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z" />
                        </svg>
                        <svg class="status-icon error" width="20" height="20" viewBox="0 0 24 24"
                             fill="currentColor">
                            <path d="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12z" />
                        </svg>
                    </div>
                </div>
                <div class="error-message" id="newPasswordError"></div>

                <!-- Password Strength Indicator -->
                <div class="password-strength show" id="passwordStrength">
                    <div class="strength-bar">
                        <div class="strength-fill" id="strengthFill"></div>
                    </div>
                    <div class="strength-text" id="strengthText">Password Strength</div>
                    <div class="strength-requirements" id="strengthRequirements">
                        <div class="requirement" data-requirement="length">
                            <svg class="req-icon" width="16" height="16" viewBox="0 0 24 24"
                                 fill="currentColor">
                                <path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z" />
                            </svg>
                            <span>At least 8 characters</span>
                        </div>
                        <div class="requirement" data-requirement="uppercase">
                            <svg class="req-icon" width="16" height="16" viewBox="0 0 24 24"
                                 fill="currentColor">
                                <path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z" />
                            </svg>
                            <span>One uppercase letter</span>
                        </div>
                        <div class="requirement" data-requirement="lowercase">
                            <svg class="req-icon" width="16" height="16" viewBox="0 0 24 24"
                                 fill="currentColor">
                                <path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z" />
                            </svg>
                            <span>One lowercase letter</span>
                        </div>
                        <div class="requirement" data-requirement="number">
                            <svg class="req-icon" width="16" height="16" viewBox="0 0 24 24"
                                 fill="currentColor">
                                <path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z" />
                            </svg>
                            <span>One number</span>
                        </div>
                        <div class="requirement" data-requirement="special">
                            <svg class="req-icon" width="16" height="16" viewBox="0 0 24 24"
                                 fill="currentColor">
                                <path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z" />
                            </svg>
                            <span>One special character</span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Confirm Password Input Group -->
            <div class="input-group-reset-pwd">
                <label for="confirmPassword" class="input-label">Confirm New Password</label>
                <div class="input-wrapper">
                    <div class="input-icon">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                            <path d="M9 12L11 14L15 10M21 12C21 16.97 16.97 21 12 21C7.03 21 3 16.97 3 12C3 7.03 7.03 3 12 3C16.97 3 21 7.03 21 12Z" />
                        </svg>
                    </div>
                    <input type="password" id="confirmPassword" name="confirmPassword" class="input-field"
                           placeholder="Confirm your new password" autocomplete="new-password" required>
                    <button type="button" class="password-toggle" id="confirmPasswordToggle">
                        <svg class="eye-open" width="20" height="20" viewBox="0 0 24 24"
                             fill="currentColor">
                            <path d="M12 4.5C7 4.5 2.73 7.61 1 12C2.73 16.39 7 19.5 12 19.5S21.27 16.39 23 12C21.27 7.61 17 4.5 12 4.5ZM12 17C9.24 17 7 14.76 7 12S9.24 7 12 7S17 9.24 17 12S14.76 17 12 17ZM12 9C10.34 9 9 10.34 9 12S10.34 15 12 15S15 13.66 15 12S13.66 9 12 9Z" />
                        </svg>
                        <svg class="eye-closed" width="20" height="20" viewBox="0 0 24 24"
                             fill="currentColor" style="display: none;">
                            <path d="M12 7C9.24 7 7 9.24 7 12C7 12.65 7.13 13.26 7.36 13.82L9.8 11.38C9.93 10.59 10.59 9.93 11.38 9.8L13.82 7.36C13.26 7.13 12.65 7 12 7ZM2 4.27L4.28 6.55L4.73 7C3.08 8.3 1.78 10 1 12C2.73 16.39 7 19.5 12 19.5C13.55 19.5 15.03 19.2 16.38 18.66L16.81 19.09L19.73 22L21 20.73L3.27 3L2 4.27ZM7.53 9.8L9.08 11.35C9.03 11.56 9 11.78 9 12C9 13.66 10.34 15 12 15C12.22 15 12.44 14.97 12.65 14.92L14.2 16.47C13.53 16.8 12.79 17 12 17C9.24 17 7 14.76 7 12C7 11.21 7.2 10.47 7.53 9.8ZM11.84 9.02L14.99 12.17L15.01 12.01C15.01 10.35 13.67 9.01 12.01 9.01L11.84 9.02Z" />
                        </svg>
                    </button>
                    <div class="input-status">
                        <svg class="status-icon success" width="20" height="20" viewBox="0 0 24 24"
                             fill="currentColor">
                            <path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z" />
                        </svg>
                        <svg class="status-icon error" width="20" height="20" viewBox="0 0 24 24"
                             fill="currentColor">
                            <path d="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12z" />
                        </svg>
                        <svg class="status-icon matching" width="20" height="20" viewBox="0 0 24 24"
                             fill="currentColor" style="display: none;">
                            <path d="M12 2C6.48 2 2 6.48 2 12S6.48 22 12 22S22 17.52 22 12S17.52 2 12 2ZM10 17L5 12L6.41 10.59L10 14.17L17.59 6.58L19 8L10 17Z" />
                        </svg>
                    </div>
                </div>
                <div class="error-message" id="confirmPasswordError"></div>

                <!-- Password Match Indicator -->
                <div class="password-match" id="passwordMatch" style="display: none;">
                    <div class="match-indicator">
                        <svg class="match-icon success" width="16" height="16" viewBox="0 0 24 24"
                             fill="currentColor">
                            <path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z" />
                        </svg>
                        <span class="match-text">Passwords match!</span>
                    </div>
                </div>
            </div>

            <!-- Security Tips -->
            <div class="security-tips">
                <h4>Password Security Tips:</h4>
                <ul>
                    <li>Use a unique password you haven't used before</li>
                    <li>Avoid personal information like names or birthdays</li>
                    <li>Consider using a password manager</li>
                    <li>Don't share your password with anyone</li>
                </ul>
            </div>

            <!-- Reset Button -->
            <button type="submit" class="reset-btn" id="resetBtn">
                <span class="btn-text">Reset Password</span>
                <div class="btn-spinner" style="display: none;">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                        <circle cx="12" cy="12" r="3" />
                    </svg>
                </div>
            </button>

            <!-- Back to Login -->
            <div class="back-to-login">
                <a href="#" onclick="goBackToLogin()">
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
                        <path d="M20 11H7.83L13.42 5.41L12 4L4 12L12 20L13.41 18.59L7.83 13H20V11Z" />
                    </svg>
                    Back to Login
                </a>
            </div>
        </form>
    </div>
</div>

<!-- Render JS -->
@{
    var jsListEnd = new List<string> {
        "reset-pwd.js"
    };
    await Html.RenderPartialAsync("_Css_Js_Render", jsListEnd);
}