@{
    var cssList = new List<string> {
            "forgot-password.css"
         };
    await Html.RenderPartialAsync("_Css_Js_Render", cssList);
}


<div class="forgot-password-container">
    <div class="login-form-wrapper">
        <!-- Login Form Header -->
        <div class="login-header">
            <div class="login-icon">
                <svg width="48" height="48" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M12 2C13.1 2 14 2.9 14 4C14 5.1 13.1 6 12 6C10.9 6 10 5.1 10 4C10 2.9 10.9 2 12 2ZM21 9V7L15 4V6C15 7.66 13.66 9 12 9S9 7.66 9 6V4L3 7V9H21ZM12 10C13.1 10 14 10.9 14 12V22H10V12C10 10.9 10.9 10 12 10Z" />
                </svg>
            </div>
            <h1 class="login-title">Welcome Back</h1>
            <p class="login-subtitle">Please sign in to your account</p>
        </div>

        <!-- Login Form -->
        <form class="login-form" id="forgotPwdForm" novalidate>
            <!-- Email Input Group -->
            <div class="input-group-forgot-password">
                <label for="email" class="input-label">Email Address</label>
                <div class="input-wrapper">
                    <div class="input-icon">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                            <path d="M20 4H4C2.9 4 2.01 4.9 2.01 6L2 18C2 19.1 2.9 20 4 20H20C21.1 20 22 19.1 22 18V6C22 4.9 21.1 4 20 4ZM20 8L12 13L4 8V6L12 11L20 6V8Z" />
                        </svg>
                    </div>
                    <input type="email" id="email" name="email" class="input-field"
                           placeholder="Enter your email" autocomplete="email" required>

                </div>
                <div class="error-message" id="emailError"></div>
            </div>

            <!-- Login Button -->
            <button type="submit" class="forgot-pwd-btn" id="loginBtn">
                <span class="btn-text">Submit</span>
                <div class="btn-spinner" style="display: none;">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                        <path d="M12 2L13.09 8.26L22 9L13.09 15.74L12 22L10.91 15.74L2 9L10.91 8.26L12 2Z" />
                    </svg>
                </div>
            </button>
        </form>
    </div>
</div>

<!-- Render JS -->
@{
    var jsListEnd = new List<string> {  
        "forgot-pwd.js"
    };
    await Html.RenderPartialAsync("_Css_Js_Render", jsListEnd);
}