@using ShopeeFood_WebApp.Models.Cities;

@model CityViewModel
@{
    var activeId = (int?)ViewBag.ActiveCategoryId ?? 1;
}

<!-- MENU -->
<header class="main-header">
    <div class="container-header">
        <div class="container">
            <div class="header-container">
                <header class="navbar">
                    <div class="logo">
                        <img src="https://shopeefood.vn/app/assets/img/shopeefoodvn.png?4aa1a38e8da801f4029b80734905f3f7" alt="ShopeeFood">
                    </div>
                    <div class="location">
                        <select>
                            @if (Model != null && Model.Cities.Any())
                            {
                                foreach (var item in Model.Cities.ToList())
                                {
                                    <option id="@item.CityId">@item.CityName</option>

                                }
                            }
                            else
                            {
                                <option>Bắc Ninh</option>
                                <option>Hà Nội</option>
                                <option>Hồ Chí Minh</option>
                            }
                        </select>
                    </div>
                    <div class="nav-links" id="menu">
                        @if (Model != null && Model.CityBusinesses.Any())
                        {
                            foreach (var item in Model.CityBusinesses.ToList())
                            {
                                <a class="nav-link-item @MenuHelper.IsActive(activeId, item.FieldId)" href="#" data-id="@item.FieldId">@item.FieldName</a>
                            }
                        }
                    </div>
                    <div class="search">
                        <button onclick="showSearchModal()" id="openModal">🔍</button>
                    </div>
                    <div class="login">
                        <button>Đăng nhập</button>
                    </div>
                    <div class="language">
                        <img src="~/Content/ThemeV1/img/vietnam.png" alt="Vietnam Flag">
                    </div>
                </header>
            </div>
        </div>
    </div>
</header>

