<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.PageTitle - ShopeeFood Clone</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Content/ThemeV1/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ShopeeFood_WebApp.styles.css" asp-append-version="true" />
    <link rel="icon" type="favicon" href="~/Content/ThemeV1/img/Logo-ShopeefoodVN.png">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

     @{
         var cssList = new List<string> {
            "header-menu.css",
            "banner.css",
            "footer.css",
         };
         await Html.RenderPartialAsync("_Css_Js_Render", cssList);
     }

</head>
<body>
    <div class="loader-redirect-overlay">
        <div class="loader-redirect"></div>
    </div>

    <!-- Render Header using ViewComponet -->
    @await Component.InvokeAsync("Header", new { cityId = 1 });
    <!-------------------------------------->

    <!---------------------- BANNER - LEFT ---------------------->
    @{
        await Html.RenderPartialAsync("_ContentBannerLeft");
    }
    <!---------------------- END BANNER - LEFT ---------------------->

    <!---------------------- BANNER - RIGHT ---------------------->
    @{
        await Html.RenderPartialAsync("_ContentBannerRight");
    }
    <!---------------------- END BANNER - RIGHT ---------------------->

    <div class="container">
        @RenderBody()
    </div>

    <!-- Render footer using ViewComponent -->
    @await Component.InvokeAsync("Footer")
    <!--------------------------------------->

    <!-- Render JS -->
    @{
        var jsListEnd = new List<string> {
            "header-menu.js",
            "banner.js",
        };  
        await Html.RenderPartialAsync("_Css_Js_Render", jsListEnd);
    }
    <!-- END RENDER -->

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>


    @await RenderSectionAsync("Scripts", required: false)
    <!-- Create section Script to Render block js code of the child view (If use) -->
    <!-- The child view that want to "Script"" section must be declare:
    @* @section Scripts {
            <script>
                console.log("Hello from index view!");
            </script>
    } *@
    
    Snippet code will be render in Script section
    -->
</body>
</html>
